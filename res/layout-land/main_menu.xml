<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/xml_bg_default"
        android:orientation="horizontal">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center">

        <ImageView
                android:id="@+id/logo"
                android:src="@drawable/ic_logo_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">
        <TextView
                android:id="@+id/menu_start"
                style="@style/TextView.Menu"
                android:onClick="startGame"
                android:text="@string/button_game"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/menu_customize"
                style="@style/TextView.Menu"
                android:onClick="showMGC"
                android:text="@string/button_customization_center"
                android:fontFamily="sans-serif-medium" />

        <TextView
                android:id="@+id/menu_preferences"
                style="@style/TextView.Menu"
                android:onClick="showPreferences"
                android:text="@string/button_preferences"
                android:fontFamily="sans-serif-light" />

        <TextView
                android:id="@+id/menu_hall_of_fame"
                style="@style/TextView.Menu"
                android:onClick="showHallOfFame"
                android:text="@string/button_hall_of_fame"
                android:fontFamily="sans-serif-thin" />

    </LinearLayout>
</LinearLayout>
